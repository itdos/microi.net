<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <!-- 发布项目：
          dotnet clean && dotnet publish -c Release -o ./bin/Release/publish
    -->
    <!-- 本地运行项目：dotnet Microi.net.Api.dll __urls=http://0.0.0.0:8080【记得替换__】 -->
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>d0207c65-1d39-4295-b91e-ef94ae32985c</UserSecretsId>
    <!-- 构建时是否编译 Razor 视图到 DLL -->
    <RazorCompileOnBuild>false</RazorCompileOnBuild>
    <!-- 发布时是否编译 Razor 视图到 DLL -->
    <RazorCompileOnPublish>false</RazorCompileOnPublish>
    <!-- 是否保留编译上下文： true保留，支持运行时编译（如动态视图）。 false不保留，减少发布包大小 -->
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <!-- 禁用运行时发布修剪（重要！） -->
    <PublishTrimmed>false</PublishTrimmed>
    <!-- 确保静态文件被复制 -->
    <CopyRazorGenerateFilesToPublishDirectory>true</CopyRazorGenerateFilesToPublishDirectory>
    <IncludeRazorContentInPack>true</IncludeRazorContentInPack>
    <!-- 排除预编译 -->
    <MvcRazorExcludeRefAssembliesFromPublish>false</MvcRazorExcludeRefAssembliesFromPublish>
    <MvcRazorFilesToCompile>Remove</MvcRazorFilesToCompile>
    <!-- 禁用 Razor SDK 的默认编译 -->
    <UseRazorBuildServer>false</UseRazorBuildServer>
  </PropertyGroup>

  <!-- 确保 Views 文件夹被发布 -->
  <ItemGroup>
    <None Include="Views\**\*.cshtml" CopyToPublishDirectory="PreserveNewest" />
    <None Include="wwwroot\**\*" CopyToPublishDirectory="PreserveNewest" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
    <DocumentationFile>bin\Debug\net10.0\Microi.net.Api.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
