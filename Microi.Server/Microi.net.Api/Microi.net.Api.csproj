  <!-- 智能引用 Microi.AI：本地存在用ProjectReference，否则用PackageReference -->
  <ItemGroup Condition="'$(MicroiAIExists)' == 'true'">
    <ProjectReference Include="..\Microi.AI\Microi.AI.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(MicroiAIExists)' != 'true'">
