{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.js",
    "**/*.vue",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "unpackage",
    "dist"
  ]
}